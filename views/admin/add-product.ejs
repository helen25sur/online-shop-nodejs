<body>
  <%- include('../includes/header.ejs') %>
  <main class="main-content grid-container">
    <section class="add-product grid-content">
      <h2 class="heading-sm">
        <%= pageTitle %>
      </h2>
      <form class="form txt body-txt" action="/admin/add-product" method="post">
        <label for="prodTitle">Product Title:</label>
        <input type="text" name="prodTitle" id="prodTitle" placeholder="Title" required>
        <label for="prodPrice">Product Price: $ 
          <input type="number" step="0.01" inputmode="numeric" min="0.01" max="1000" name="prodPrice" id="prodPrice" placeholder="9.99" required>
        </label>
        <button type="submit" class="btn solid content-center">Add Product</button>
      </form>
    </section>
  </main>
<%- include('../includes/end.ejs') %>
